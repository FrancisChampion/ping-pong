from turtle import Turtle, Screen
import random
tim = Turtle()
tim.pensize(15)


colour = ['aquamarine', 'dark red', 'mint cream', 'deep pink', 'light slate blue']
def shape_of(num):
    angle = 360/num
    for i in range(num):
        tim.forward(100)
        tim.right(angle)
    for num in range(3,11):
        tim.color(random.choice(colour))
        shape_of(num)









screen = Screen()
screen.exitonclick()